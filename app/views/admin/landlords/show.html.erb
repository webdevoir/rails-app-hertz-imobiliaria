<div class="row">
  <div class="col-md-12">
    <div class="landlord-show-wrapper">
      <h2 class="title"><i class="fa fa-address-card"></i> Proprietario</h2>
      <div class="landlord-info">
        <h3><%= @landlord.name %></h3>
        <div class="basic-info">
          <p><i class="fa fa-phone"></i> <%= @landlord.phone1 %> <span class="small-info">&bull;</span>
          <i class="fa fa-mobile"></i> <%= @landlord.phone2 %> <span class="small-info">&bull;</span>
          <i class="fa fa-envelope"></i> <%= @landlord.email %></p>
          <div id="property-count">
          <p><b><i class="fa fa-home"></i> Propriedades Cadastradas:</b> <%= @landlord.properties.count %></p></div>
        </div>
        <div class="landlord-edit">
          <%= link_to 'Editar', edit_admin_landlord_path(@landlord), class: "btn btn-primary" %>
          <%= link_to 'Deletar', admin_landlord_path(@landlord), data: {confirm: 'Tem certeza que quer deletar a propriedade?'}, class: "btn btn-danger"%>
        </div>
        <div class="landlord-more-info collapse" id="collapseExample"">
          <div class="row">
            <div class="col-md-6">
              <div class="dados">
                <span class="titulo"><b>Dados Pessoais</b></span>
                <p><b>RG:</b> <%= @landlord.rg %></p>
                <p><b>CPF:</b> <%= @landlord.cpf %> </p>
                <p><b>Data de Nacimento:</b> <%= @landlord.birthday %> </p>
                <p><b>Estado cívil:</b> <%= @landlord.martial_status %> </p>
                <p><b>Profisão:</b> <%= @landlord.profession %> </p>
              </div>
            </div>
            <div class="col-md-6">
              <div class="dados">
                 <span class="titulo"><b>Endereço</b></span>
                <p><b>Rua:</b> <%= @landlord.street %>, <%= @landlord.number %></p>
                <p><b>Complemento:</b> <%= @landlord.complement %></p>
                <p><b>Condominio:</b> <%= @landlord.condo_name  %></p>
                <p><b>Bairro:</b> <%= @landlord.neighborhood %></p>
                <p><b>CEP:</b> <%= @landlord.cep %> </p>
                <p><b>Cidade/Estado:</b> <%= @landlord.city %>/<%= @landlord.state %></p>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="dados">
                 <span class="titulo"><b>Dados Bancarios</b></span>
                <p><b>Deposito:</b> <%= @landlord.deposit ? "Sim" : "Não" %></p>
                <p><b>Tipo de Conta:</b> <%= @landlord.type_of_account %> </p>
                <p><b>Banco:</b> <%= @landlord.bank %> </p>
                <p><b>Agência:</b> <%= @landlord.agency %></p>
                <p><b>Numero de conta:</b> <%= @landlord.number %></p>
              </div>
            </div>
            <div class="col-md-6">
              <div class="dados">
                 <span class="titulo"><b>Dados Pessoais</b></span>
                <p><b>Taxa de Adminição Mensal:</b> <%= @landlord.adm_rate %>%</p>
                <p><b>Taxa de Administração 1ª:</b> <%= @landlord.first_rate %>%</p>
              </div>
            </div>
          </div>
        </div>
        <div class="show-more text-center">
          <a data-toggle="collapse" href="#collapseExample">+</a>
        </div>
      </div>
      <br>
      <%= link_to '+ Cadastrar Nova Propriedade', new_admin_property_path(landlord: @landlord.id), class: "btn btn-danger" %>

      <% @landlord.properties.each do |property| %>
        <%= render 'shared/property_card', property: property  %>
      <% end %>
    </div>
  </div>
</div>
