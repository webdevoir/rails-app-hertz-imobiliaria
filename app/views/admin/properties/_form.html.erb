<div class="form-property">
  <%= simple_form_for([:admin, property]) do |f| %>
    <%= f.input :landlord_id, :as => :hidden, input_html: { value: @landlord.id } %>
    <%= f.input :sale  %>
    <%= f.input :rent  %>
    <%= f.input :bussiness_type, label: 'Tipo de Negocio', collection: ['Residencial', 'Comercial'], wrapper_html: {class: 'col-md-6'} %>
    <%= f.input :property_type, label: 'Tipo de Propriedade', collection: ['Casa', 'Apartamento'], wrapper_html: {class: 'col-md-6'}  %>
    <%= f.input :construction_year, label: 'Ano de Contrução', wrapper_html: {class: 'col-md-3'} %>
    <%= f.input :condition %>
    <%= f.input :position, label: 'Posição', wrapper_html: {class: 'col-md-3'}  %>
    <%= f.input :style, wrapper_html: {class: 'col-md-6'}  %>
    <%= f.input :rooms, label: 'Nr. de Quartos', wrapper_html: {class: 'col-md-3'}  %>
    <%= f.input :bathrooms, label: 'Nr. de Banheiros', wrapper_html: {class: 'col-md-3 '}  %>
    <%= f.input :suites, label: 'Nr. de Suites', wrapper_html: {class: 'col-md-3'}  %>
    <%= f.input :garages, label: 'Nr. Vagas', wrapper_html: {class: 'col-md-3'}  %>
    <%= f.input :description, wrapper_html: {class: 'col-md-12'}  %>
    <%= f.input :sell_conditions  %>
    <%= f.input :rent_guarantee  %>
    <%= f.input :observations  %>
    <%= f.input :published  %>
    <%= f.input :featured  %>

    <div class="col-md-12">
      <%= f.button :submit, 'Salvar', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

