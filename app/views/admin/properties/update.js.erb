function addFlash(reviewHTML) {
  const notifications = document.getElementById('notifications');
  notifications.insertAdjacentHTML('beforeend', reviewHTML);
}

<% if @property.errors.any? %>
  addFlash('<%= j render "shared/flashes", alert: "Houve um problema tente mais tarde" %>')
<% else %>
  addFlash('<%= j render "shared/flashes", notice: "Atualizado corretamente" %>')
<% end %>
