<div class="col-md-12">
<div class="landlord-card">
  <%= image_tag('avatar-mini.jpg',  size: "100x100")   %>
  <div class="info">
    <div class="main-info">
      <p class="landlord-name"><%= landlord.name %></p>
      <div class="tel-info">
        <% if !landlord.phones.empty? %>
          <% landlord.phones.each do |phone| %>
            <p><b><i class="fa fa-phone"></i></b> <%= phone.phone %></p>
          <% end %>
        <% end %>

        <% if !landlord.emails.empty? %>
            <% landlord.emails.each do |email| %>
              <p><b><i class="fa fa-envelope"></i></b> <%= email.email %></p>
            <% end %>
        <% end %>
      </div>
    </div>
    <div class="booked text-right">
      <p><b>Cadastros: <%= landlord.properties.count %></b></p>
      <p>Aluguel/Venda: <%= landlord.properties.where(sale: true, rent: true).count %></p>
      <p>Venda:  <%= landlord.properties.where(sale: true, rent: false).count %></p>
      <p>Aluguel: <%= landlord.properties.where(sale: false, rent: true).count %></p>
    </div>
  </div>
  <div class="landlord-card-link">
    <%= link_to "", admin_landlord_path(landlord) %>
  </div>
</div>
</div>
