<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <% if user_signed_in? %>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <i class="fa fa-user dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to 'Dashboard', admin_dashboard_path, class: "hidden-md hidden-lg" %></li>
            <li><%= link_to 'Proprietarios', admin_landlords_path, class: "hidden-md hidden-lg" %></li>
            <li><%= link_to 'Propriedades', admin_properties_path, class: "hidden-md hidden-lg" %></li>
            <li>
              <%= link_to admin_contact_forms_path, class: "hidden-md hidden-lg" do %>
                Menssagens <%= "(#{@contact_form_count})" if @contact_form_count > 0 %>
              <% end %>
            </li>
            <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
    <% end %>
  </div>
</div>

