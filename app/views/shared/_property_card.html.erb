<div class="property-card">
  <% if property.photos.first %>
    <p><%= cl_image_tag (property.photos.first).path, width: 100, height: 100, crop: :fill %></p>
  <% end %>
  <div class="info">
  <p>Codigo:<%= property.code %></p>
  <p><%= property.address.street %>, <%= property.address.number  %></p>
  <%= link_to "", admin_property_path(property), class: "property-link" %>
  </div>
</div>
