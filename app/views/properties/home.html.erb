<style>
  .home-title {
    color: #fe7e01;
    font-weight: 300;
    font-size: 30px;
  }

  .slick-prev:before, .slick-next:before {
    color: #fe7e01;
  }

  .sign-up {
    padding: 1em;
    background:#fe7e01;
    height: 35vh;
  }

  .sign-up h3 {
    font-size: 30px;
    font-weight: 300;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer {
    padding: 1em 7em;
    background: black;
    height: 50vh;
    color: white;
    display: flex;
    justify-content: space-between;
  }

  .sign-up-button {
    background: black;
    border: none;
  }
</style>


<div class="container">
  <h4 class="home-title">Destaques de Venda</h4>
  <div class="row">
    <div class="sale">
      <% @properties_sale.each do |property| %>
        <div class="col-lg-3">
          <%= render 'shared/client_property_card', property: property  %>
        </div>
      <% end %>
    </div>
  </div>
  <h4 class="home-title">Destaques de Locação</h4>
  <div class="row">
    <div class="rent">
      <% @properties_rent.each do |property| %>
        <div class="col-lg-3">
          <%= render 'shared/client_property_card', property: property  %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="sign-up text-center">
  <h3>Alugando ou Vendendo?</h3>
  <%= link_to "Cadastre Seu Imovel", "#" , class: 'btn btn-primary btn-lg sign-up-button'  %>
</div>


<div class="footer">

  <div class="menu">
    <h5>Menu</h5>
    <ul>
      <li>Home</li>
      <li>Empresa</li>
      <li>Anuncie Aqui</li>
      <li>Contato</li>
      <li>Enviar Depoimento</li>
    </ul>
  </div>

  <div class="veja-tambem">
    <h5>VEJA TAMBEM</h5>
    <ul>
      <li>Apartamento</li>
      <li>Casa</li>
      <li>Cobertura</li>
      <li>Kitnet</li>
      <li>Emprendimento</li>
    </ul>

  </div>

  <div class="contato">
    <h5>CONTATO</h5>
    <ul>
      <li>Rua Baraldi, 740 - Centro</li>
      <li>São Caetano do Sul - SP</li>
      <li>Creci: J-4909</li>
    </ul>
  </div>

</div>



<% content_for :js do %>
<script type="text/javascript">

  $('.sale').slick({
    infinite: true,
    slidesToShow: 4,
    slidesToScroll: 1,
    autoplay: true,
    autoplaySpeed: 2500
  });

  $('.rent').slick({
    infinite: true,
    slidesToShow: 4,
    slidesToScroll: 1,
    autoplay: true,
    autoplaySpeed: 4500
  });

</script>

<% end %>
