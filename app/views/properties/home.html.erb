<div class="container">
  <h4 class="home-title">Destaques de Venda</h4>
  <div class="row">
    <div class="sale">
      <% @properties_sale.each do |property| %>
        <div class="col-lg-3">
          <%= render 'shared/client_property_card', property: property  %>
        </div>
      <% end %>
    </div>
  </div>

  <h4 class="home-title">Destaques de Locação</h4>
  <div class="row">
    <div class="rent">
      <% @properties_rent.each do |property| %>
        <div class="col-lg-3">
          <%= render 'shared/client_property_card', property: property  %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="sign-up text-center">
  <h3>Alugando ou Vendendo?</h3>
  <%= link_to "Cadastre Seu Imovel", "#" , class: 'btn btn-primary btn-lg sign-up-button'  %>
</div>

<% content_for :js do %>
<script type="text/javascript">

  $('.sale').slick({
    infinite: true,
    slidesToShow: 4,
    slidesToScroll: 1,
    autoplay: true,
    autoplaySpeed: 2500
  });

  $('.rent').slick({
    infinite: true,
    slidesToShow: 4,
    slidesToScroll: 1,
    autoplay: true,
    autoplaySpeed: 4500
  });

</script>

<% end %>
